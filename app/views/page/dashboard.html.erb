<div id="content_container">
  <div class="row">
    <div class="mosaic_container">
      <div class="mosaic_content">

      </div>
    </div>


    <div class="side_container">
      <div class="side">
        <div class="side_content">

          <div id="authorize_section">
            <h3>Connect an Account</h3>
              <ul>
                <li>Instagram</li>
                <li>Twitter</li>
                <li>Facebook</li>
              </ul>
          </div>

          <div id="display_section">
            <h3>Create a New Display</h3>

            <%= simple_form_for(@display, as: :display) do |f| %>
                <div class="form-inputs">
                  <%= f.input :name, required: true, autofocus: true %>
                  <%= f.input :active_content, as: :boolean  %>
                  <%= f.file_field :file, multiple: false, accept: ".jpg, .jpeg, .gif, .png, .mp4, .m4v, .webm, .ogg, .pdf", required: true %>
                </div>

                <div class="form-actions">
                  <%= f.button :submit, "Submit", id: 'submit_btn' %>
                </div>
            <% end %>

          </div>

          <div id="entry_section">
              <h3>Create New Entry</h3>

              <ul>
                <li>Name of Entry</li>
                <li>Add a User</li>
                <li>Add a Hashtag</li>
                <li>Set Display Ratio</li>
              </ul>
              <br>
              <div class="textaligncenter">
                  <a href="#" class="btn btn-primary">Submit</a>
              </div>
          </div>

          <div id="entry_management">

          </div>

        </div>
      </div>
    </div>

  </div>

</div>
