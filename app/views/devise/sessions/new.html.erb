<%= stylesheet_link_tag "login" %>

<div class="container">
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <h1>Welcome to DOT Powered by Conexus</h1>

  <div class="login__form">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.text_field :login, autofocus: true, class: "form__control", id: "signup__email", placeholder: "Email Address" %>
    </div>
    <div class="form-group">
      <%= f.password_field :password, autocomplete: "off", class: "form__control", id: "signup__email", placeholder: "Password" %>
    </div>

    <div class="login__options">
      <% if devise_mapping.rememberable? -%>
        <div class="form-group remember-checkbox">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "label-text" %>
        </div>
      <% end %>
      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: "forgot__password" %><br />
      <% end -%>
    </div>

    <div class="actions form__group">
      <%= f.submit "SIGN IN", class: "btn btn__login" %>
    </div>

    <div class="signup__link">
      <span>Not a member? <%= mail_to 'twhittaker@conexustech.com', 'Request Access' %></span>
    </div>

    <% end %>

  </div>
</div>
