<p id="notice"><%= notice %></p>

<h1>Displays</h1>

<table>
  <thead>
    <tr>
      <th>Display name</th>
      <th>Active Content</th>
      <th>
        Display
      </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @displays.each do |display| %>
      <tr>
        <td><%= display.name %></td>
        <td><%= display.active_content %></td>
        <td><%= image_tag display.file %></td>
        <td><%= link_to 'Show', display %></td>
        <td><%= link_to 'Edit', edit_display_path(display) %></td>
        <td><%= link_to 'Destroy', display, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

